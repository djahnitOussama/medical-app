<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oussama.djahnit_application">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/medocs"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/medocs"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Medicament_activity"
            android:label="@string/title_pills"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oussama.djahnit_application.MainActivity" />
        </activity>
        <activity
            android:name=".Add_pill_Activity"
            android:label="@string/title_add_pills"
            android:parentActivityName=".Medicament_activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oussama.djahnit_application.Medicament_activity" />
        </activity>
        <activity
            android:name=".Prescription_activity"
            android:label="@string/title_Prescription"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oussama.djahnit_application.MainActivity" />
        </activity>
        <activity
            android:name=".Add_prescription_activity"
            android:label="@string/title_add_Prescription"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oussama.djahnit_application.Prescription_activity" />
        </activity>
        <activity
            android:name=".Read_prescription_activity"
            android:label="@string/title_Read_Prescription"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oussama.djahnit_application.Prescription_activity" />
        </activity>
        <activity
            android:name=".Posologie"
            android:label="@string/title_Posologie"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oussama.djahnit_application.MainActivity" />
        </activity>
    </application>

</manifest>